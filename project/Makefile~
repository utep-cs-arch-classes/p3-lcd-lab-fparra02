# makefile configuration
COMMON_OBJECTS     = draw_shapes.o
CPU     	   = msp430g2553
CFLAGS 		   = -mmcu=${CPU} -Os -I../h
LDFLAGS		   = -L../lib -L/opt/ti/msp430_gcc/include/

#switch the compiler (for internal make rules)

CC 		   = msp430-elf-gcc
AS 		   = msp430-elf-gcc -mmcu=${CPU} -c

all: shape_demo.elf

shape_demo.elf: ${COMMON_OBJECTS} shape_demo.o buzzer.o switches.o interruptHandler.o
	${CC} ${CFLAGS} ${LDFLAGS} -o $@ $^ -lTimer -lLcd

load: shape_demo.elf
	msp430loader.sh $^

clean:
	rm -f *.o *.elf
